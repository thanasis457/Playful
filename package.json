{
  "name": "Playful",
  "version": "4.3.0",
  "description": "Shows the current playing song. Made to show spotify songs.",
  "main": "main.js",
  "scripts": {
    "test": "wdio run ./wdio.conf.js",
    "start": "NODE_ENV=development electron-forge start",
    "prod": "NODE_ENV=production electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "install": "cmake-js compile",
    "wdio": "wdio run ./wdio.conf.js"
  },
  "binary": {
    "napi_versions": [
      7
    ]
  },
  "author": "Athanasios Taprantzis",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-dmg": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@electron/rebuild": "^3.6.0",
    "@wdio/cli": "^9.12.7",
    "@wdio/local-runner": "^9.12.7",
    "@wdio/mocha-framework": "^9.12.6",
    "@wdio/spec-reporter": "^9.12.6",
    "electron": "^31.0.1",
    "wdio-electron-service": "^8.1.0"
  },
  "dependencies": {
    "@aptabase/electron": "^0.3.1",
    "@ngrok/ngrok": "^1.5.0",
    "axios": "^1.7.2",
    "bindings": "^1.5.0",
    "cmake-js": "^7.3.0",
    "electron-store": "^8.1.0",
    "nan": "^2.20.0",
    "node-addon-api": "*",
    "node-gyp": "^10.1.0",
    "run-applescript": "^6.0.0",
    "ws": "^8.18.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": false,
        "icon": "icons/app",
        "extraResource": [
          "./compiledFunctions",
          "./media",
          "./widget",
          "libMediaSubscriber.dylib"
        ],
        "extendInfo": {
          "LSUIElement": 1
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "windows"
          ]
        }
      ]
    }
  }
}

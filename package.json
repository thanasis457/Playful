{
  "name": "Playful",
  "version": "4.0.1",
  "description": "Shows the current playing song. Made to show spotify songs.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "NODE_ENV=development electron-forge start",
    "prod": "NODE_ENV=production electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "install": "cmake-js compile"
  },
  "binary": {
    "napi_versions": [
      7
    ]
  },
  "author": "Athanasios Taprantzis",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-dmg": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@electron/rebuild": "^3.6.0",
    "electron": "^31.0.1"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bindings": "^1.5.0",
    "cmake-js": "^7.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.1",
    "nan": "^2.20.0",
    "ngrok": "^5.0.0-beta.2",
    "node-addon-api": "*",
    "node-gyp": "^10.1.0",
    "qrcode": "^1.5.4",
    "run-applescript": "^6.0.0",
    "ws": "^8.18.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": false,
        "icon": "icons/app",
        "extraResource": [
          "./compiledFunctions",
          "./media",
          "./widget",
          "libMediaSubscriber.dylib"
        ],
        "extendInfo": {
          "LSUIElement": 1
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Playful"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "windows"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": [
            "linux"
          ],
          "config": {}
        }
      ]
    }
  }
}
